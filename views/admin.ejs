        <!--Radio version of tabs-->

      <div class="tabset">
        <!-- Tab 1 -->
        <input type="radio" name="tabset" id="tab1" aria-controls="marzen" checked>
        <label for="tab1">Add Apartment</label>
        <!-- Tab 2 -->
        <input type="radio" name="tabset" id="tab2" aria-controls="rauchbier">
        <label for="tab2">Edit Apartment</label>
        <!-- Tab 3 -->
        <input type="radio" name="tabset" id="tab3" aria-controls="dunkles">
        <label for="tab3">Edit Main Page</label>
        
        <div class="tab-panels">
          <section class="tab-panel">
            <h2>Add New Apartment!</h2>
            

            <form action="admin/create_apt" method="POST" class="my-form">
              <div class="container" id="tabOne">
                <ul>
                  <li>
                    <div class="grid grid-2">
                      <input type="text" placeholder="Apt Name" name="apt_name" required>  
                      <input type="text" placeholder="Apt Area" name="apt_area" required>
                    </div>
                  </li>
                  <li>
                    <textarea type="text" placeholder="About the Apartment" name="about_apt" required></textarea>
                  </li>
                  <li>
                    <textarea type="text" placeholder="Apartment address" name="apt_address" required></textarea>
                  </li>  
                  <li>
                    <input type="text" placeholder="Googlemap link" name="gmap_link" required></input>
                  </li> 
                  <li>
                    <div class="grid grid-2">
                      <input type="text" placeholder="Owner Name" name="owner_name" required>  
                      <input type="date" placeholder="Apt completion date" name="completed_on">
                    </div>
                  </li>

                  <li>
                    <span>Uplad the brochure to this link: <a href="https://drive.internxt.com" target="_blank">Here</a></span>
                  </li>

                  <li>
                    <input placeholder="Brochure download link" name="brochure" required></input>
                  </li> 

                  <li>
                    <span>Uplad all individual images to this link: <a href="https://varun-anusheel.imgbb.com/" target="_blank">Here</a></span>
                  </li>
                  
                  <li>
                    <input placeholder="Image1 Link" name="image1_link" required></input>
                  </li> 
                  <li>
                    <input placeholder="Image2 Link" name="image2_link" required></input>
                  </li> 
                  <li>
                    <input placeholder="Image3 Link" name="image3_link" required></input>
                  </li> 
                  <li>
                    <input placeholder="Image4 Link" name="image4_link" required></input>
                  </li> 
                  <li>
                    <input placeholder="Image5 Link" name="image5_link" required></input>
                  </li> 
                  <li>
                    <input placeholder="Image6 Link" name="image6_link" required></input>
                  </li>                 
                  <li>
                    <div class="grid grid-3">
                      <div class="required-msg">REQUIRED FIELDS</div>
                      <button class="btn-grid" type="submit" disabled>
                        <span class="back">
                          <ion-icon name="cloud-upload-outline" class="icon"></ion-icon>
                        </span>
                        <span class="front">SUBMIT</span>
                      </button>
                      <button class="btn-grid" type="reset" disabled>
                        <span class="back">
                          <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/162656/eraser-icon.svg" alt="">
                        </span>
                        <span class="front">RESET</span>
                      </button> 
                    </div>
                  </li>    
                </ul>
              </div>
            </form>
            <footer>
              <div class="container">
                <small>Made with <span>❤</span> by <a href="http://georgemartsoukos.com/" target="_blank">Varun Anusheel</a>
                </small>
              </div>
            </footer>


        </section>


          <section class="tab-panel">
            <div class="container">
              <!-- <div class="searchbox">
                <input type="text" id="myFilter" class="form-control" onkeyup="myFunction()" placeholder="Search for card name..">
              </div> -->
              <div class="centering">
              <div class="omrs-input-group">
                <label class="omrs-input-underlined">
                  <input oninput="this.value = this.value.toUpperCase()" id="myFilter" class="form-control" onkeyup="myFunction()" required>
                  <span class="omrs-input-label">Search</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                </label>
              </div>
              </div>

              <div class="row projects_container" id="myApartments">


                  <% for(var i=0; i<aptdata.length; i++) {%>
                    <div class="card">
                      <figure class="card__thumb">
                        <img src="https://source.unsplash.com/75S9fpDJVdo/300x510" alt="Picture by Kyle Cottrell" class="card__image">
                        <figcaption class="card__caption">
                          <h2 class="card__title"><%= locals.aptdata[i].apt_name%></h2>
                          <p class="card__snippet"><%= locals.aptdata[i].apt_area%></p>
                          <div class="icons_container">
                            <a href= "<%= 'admin/delete_'+locals.aptdata[i].apt_name %>" class="button icon-button">
                              <ion-icon name="trash-outline" class="icon-button__icon"></ion-icon>
                            </a>
                            <a href= "<%= 'admin/edit_'+locals.aptdata[i].apt_name %>" class="button icon-button">
                              <ion-icon name="pencil-outline" class="icon-button__icon"></ion-icon>
                            </a>
                          </div>
                        </figcaption>
                      </figure>
                    </div>
                  <% } %>

                </div>
              </div>
          </section>


          <section class="tab-panel">

            <form action="admin/update_main_page" method="POST" class="my-form">
              <div class="container">
                <ul>
                  <li>
                    <div class="grid grid-2">
                      <input type="text" placeholder="Name" name="name" value = '<%= locals.staticdata.name || 'Default_Name'%>' required>  
                      <input type="text" placeholder="Mobile Number" name="mobile_number" value = <%= locals.staticdata.mobile_number || 'Default_Mobile_Number'%> required>
                    </div>
                  </li>
                  <li>
                    <textarea type="text" placeholder="About Me Title" name="aboutme_title" required><%= locals.staticdata.aboutme_title || 'Default_Aboutme_Title'%></textarea>
                  </li>
                  <li>
                    <textarea type="text" placeholder="About Me Text" name="aboutme_text" required><%= locals.staticdata.aboutme_text || 'Default_Aboutme_Text'%></textarea>
                  </li>   
                  <li>
                    <textarea placeholder="Contact Text" name="contact_text" required><%= locals.staticdata.contact_text || 'Default_Contact_Text'%></textarea>
                  </li> 
                  <li>
                    <textarea placeholder="Office Address" name="office_address" required><%= locals.staticdata.office_address || 'Default_Office_Address'%></textarea>
                  </li>
                  <li>
                    <input type="text" placeholder="Googlemap link" name="gmap_link" value = <%= locals.staticdata.gmap_link || 'Default_Gmap_Link'%> required></input>
                  </li> 
                  <li>
                    <div class="grid grid-2">
                      <input type="text" placeholder="Email ID" name="email" value = <%= locals.staticdata.email || 'Default_Email'%> required>
                      <input type="text" placeholder="Whatsapp" name="whatsapp" value = <%= locals.staticdata.whatsapp || 'Default_whatsapp'%> required>  
                    </div>
                  </li>

                  <li>
                    <input placeholder="Facebook ID Link" name="facebook" value = <%= locals.staticdata.facebook || 'Default_facebook'%> required></input>
                  </li> 
                  <li>
                    <input placeholder="Instagram Link" name="instagram" value = <%= locals.staticdata.instagram || 'Default_instagram'%> required></input>
                  </li> 

                  <li>
                    <div class="grid grid-3">
                      <div class="required-msg">REQUIRED FIELDS</div>
                      <button class="btn-grid" type="submit" id="update_submit">
                        <span class="back">
                          <ion-icon name="cloud-upload-outline" class="icon"></ion-icon>
                        </span>
                        <span class="front">SUBMIT</span>
                      </button>
                      <button class="btn-grid" type="reset" id="update_reset">
                        <span class="back">
                          <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/162656/eraser-icon.svg" alt="">
                        </span>
                        <span class="front">RESET</span>
                      </button> 
                    </div>
                  </li>    
                </ul>
              </div>
            </form>
            <footer>
              <div class="container">
                <small>Made with <span>❤</span> by <a href="http://georgemartsoukos.com/" target="_blank">Varun Anusheel</a>
                </small>
              </div>
            </footer>

          </section>
        </div>
        
      </div>

      <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      
